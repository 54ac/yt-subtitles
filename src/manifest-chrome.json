{
	"name": "Better YouTube Subtitles",
	"version": "1.1.8",
	"description": "__MSG_extText__",
	"manifest_version": 3,
	"default_locale": "en",
	"content_scripts": [
		{
			"matches": ["https://*.youtube.com/*"],
			"js": ["content-script.ts"],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options.html"
	},
	"background": {
		"service_worker": "background.ts",
		"type": "module"
	},
	"permissions": ["storage"],
	"icons": {
		"48": "img/icon-48.png",
		"96": "img/icon-96.png"
	},
	"commands": {
		"optionsOpen": {
			"description": "__MSG_commandOpenOptions__"
		}
	}
}
